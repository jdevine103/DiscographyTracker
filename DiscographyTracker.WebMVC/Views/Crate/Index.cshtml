@model IEnumerable<DiscographyTracker.Models.UserArtistListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Your Crate</h2>

<p>
    @Html.ActionLink("Add an Artist to your Crate", "Index", "Artist")
</p>
@{ int i = 0; }
@foreach (var item in Model)
{
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>@item.ArtistName</h2>
            </div>
            <div class="panel-body">
                <h4>Listening progress:</h4>
                <div class="progress">
                    <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width:40%">
                        <span class="sr-only">20% Complete</span>
                    </div>
                </div>

                <div class="panel-group" id="accordion_@i">
                    <div class="panel panel-default" id="panel_@i">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-target="#collapseOne_@i" href="#collapseOne_@i">
                                    <span class="glyphicon glyphicon-collapse-down"> </span> View Albums</a>
                            </h4>
                        </div>
                        <div id="collapseOne_@i" class="panel-collapse collapse">
                            <div class="panel-body">
                                <div class="row">
                                    @foreach (var innerItem in item.UserAlbums)
                                    {
                                        <div class="col-sm-6 col-md-4">
                                            <div class="thumbnail">
                                                <img src="~/Content/defaultassets/default_album.jpg">
                                                <div class="caption">
                                                    <h3>@innerItem.AlbumTitle</h3>
                                                    <p><a href="#" class="btn btn-default" role="button">Songs</a></p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="panel-footer">Panel Footer</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                @Html.ActionLink("Albums", "UserAlbums", "User", new { id = item.ArtistID }, null) |
                @Html.ActionLink("Remove from Crate", "Delete", new { id = item.UserArtistID })
            </div>
        </div>
    </div>
    i++;
}