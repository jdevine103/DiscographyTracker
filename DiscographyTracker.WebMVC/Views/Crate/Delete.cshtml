@model DiscographyTracker.Models.UserArtistDetail

@{
    ViewBag.Title = "Delete";
}

<h3>Are you sure you want to delete @Model.ArtistName from your Crate?</h3>
<div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Yes, Delete" class="btn btn-default" /> |
            @Html.ActionLink("No, Back to Crate", "Index", null , new { @class = "btn btn-primary btn-large" })
        </div>
    }
</div>
