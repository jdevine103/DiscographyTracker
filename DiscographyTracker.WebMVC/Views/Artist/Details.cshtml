@model DiscographyTracker.Models.ArtistDetail

@{
    ViewBag.Title = "Details";
}

<h2>@Model.ArtistName's Discography</h2>

<div>
    <hr />
    <h4>Album Count: @Model.AlbumCount</h4>
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse1">Artist Options</a>
                </h4>
            </div>
            <div id="collapse1" class="panel-collapse collapse">
                <div class="panel-body">
                    <p>
                        @Html.ActionLink($"Add Album for {Model.ArtistName}", "Edit", new { id = Model.ArtistID }, new { @class = "btn btn-primary btn-large" }) |
                        @Html.ActionLink("Edit Artist Name", "Edit", new { id = Model.ArtistID }, new { @class = "btn btn-primary btn-large" }) |
                        @Html.ActionLink("Delete Artist", "Delete", new { id = Model.ArtistID }, new { @class = "btn btn-danger btn-large" })
                    </p>
                </div>
                <div class="panel-footer">
                    @Html.ActionLink("Back to Artist Bank", "Index", null, new { @class = "btn btn-primary btn-large" })
                </div>
            </div>
        </div>
    </div>

    <hr />
</div>

<div class="row">
    <h3>Albums</h3>
    @foreach (var item in Model.Albums)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="~/Content/defaultassets/default_album.jpg">
                <div class="caption">
                    <h3>@item.AlbumTitle</h3>
                    <p>Release Date: @item.ReleaseDate</p>
                    <p>@Html.ActionLink("Songs", "Details", "Album", new { id = item.AlbumID }, new { @class = "btn btn-default btn-large" })</p>
                </div>
            </div>
        </div>
    }
</div>
<hr />
@Html.ActionLink("Back to Artist Bank", "Index", null, new { @class = "btn btn-primary btn-large" })
