@model IEnumerable<DiscographyTracker.Models.ArtistListItem>

@{
    ViewBag.Title = "Index";
}

<h2>All Artists | @Html.ActionLink("Add New Artist", "Create", null, new { @class = "btn btn-primary btn-large" })</h2>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="~/Content/defaultassets/default_artist.png" alt="...">
                    <div class="caption">
                        <h3><span class="glyphicon glyphicon-user" aria-hidden="true"></span> - @item.ArtistName</h3>
                        <p>Album Count: @item.AlbumCount</p>
                        <p>
                            @Html.ActionLink("Artist Info", "Details", new { id = item.ArtistID }, new { @class = "btn btn-default btn-large" })
                            @Html.ActionLink("Add to My Crate", "AddToCrate", "User", new { id = item.ArtistID }, new { @class = "btn btn-primary btn-large" })
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



