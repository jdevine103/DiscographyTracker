@model DiscographyTracker.Models.AlbumDetail

@{
    ViewBag.Title = "Details";
}

<h2>@Model.AlbumTitle Information</h2>


<div>
    <hr />
    <h4>Artist: @Model.ArtistName</h4>
    <h4>Song Count: @Model.Songs.Count()</h4>
    <h4>Release Date: @Model.ReleaseDate</h4>
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse1">Album Options</a>
                </h4>
            </div>
            <div id="collapse1" class="panel-collapse collapse">
                <div class="panel-body">
                    <p>
                        @Html.ActionLink($"Add Song to {Model.AlbumTitle}", "Create", "Song", new { id = Model.AlbumID }, new { @class = "btn btn-primary btn-large" }) |
                        @Html.ActionLink("Edit Album Content", "Edit", new { id = Model.AlbumID }, new { @class = "btn btn-primary btn-large" }) |
                        @Html.ActionLink("Delete Album", "Delete", new { id = Model.AlbumID }, new { @class = "btn btn-danger btn-large" })
                    </p>
                </div>
                <div class="panel-footer">
                    @Html.ActionLink("Back to Artist Bank", "Index", null, new { @class = "btn btn-primary btn-large" })
                </div>
            </div>
        </div>
    </div>
    <hr />
</div>

<div class="row">
    <h3>Songs</h3>
    @foreach (var item in Model.Songs)
    {
        <div class="col-sm-2 col-md-1 col-lg-2">
            <div class="thumbnail">
                <img src="~/Content/defaultassets/song_default.jpg">
                <div class="caption">
                    <p>@item.SongName</p>
                </div>
            </div>
        </div>
    }
</div>
@Html.ActionLink($"Add Song to {Model.AlbumTitle}", "Create", "Song", new { id = Model.AlbumID }, new { @class = "btn btn-primary btn-large" })

<hr />
<p>
    @Html.ActionLink("Back to Album Bank", "Index", null, new { @class = "btn btn-primary btn-large" })
</p>
