@model IEnumerable<DiscographyTracker.Models.UserAlbumListItem>

@{
    ViewBag.Title = "UserAlbums";
}
<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

<h2>UserAlbums</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="~/Content/defaultassets/default_album.jpg">
                <div class="caption">
                    <h3>@item.AlbumTitle</h3>
                    <p>Listening progress: </p>
                    <div class="progress">
                        <div class="progress-bar progress-bar-warning progress-bar-striped" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
                            <span class="sr-only">60% Complete (warning)</span>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <p class="icon">
                        @Html.DisplayFor(modelItem => item.IsFavorited, new { Id = item.UserAlbumID })
                    </p>
                    <p class="icon">
                        @Html.DisplayFor(modelItem => item.HaveListened, new { Id = item.UserAlbumID })
                    </p>
                </div>
            </div>
        </div>
    }
</div>

@section scripts {
    <script language="javascript" type="text/javascript">
        $(document).ready(function () {
            $("i[data-toggle='star']")
                .css({ "cursor": "pointer" })
                .click(function (e) {
                    var target = $(e.target);
                    var userAlbumId = target.attr("data-id");
                    var starSet = target.hasClass("glyphicon-star");

                    $.ajax({
                        method: starSet ? "DELETE" : "PUT",
                        url: "/api/userAlbum/" + userAlbumId + "/star",
                        data: null
                    })
                        .done(function (r) {
                            target.removeClass();
                            target.addClass("glyphicon " + (starSet ? "glyphicon-star-empty" : "glyphicon-star"));
                        })
                        .fail(function (r) {
                            alert("Failed to change star status");
                        });
                });
        });
    </script>

    <script language="javascript" type="text/javascript">
        $(document).ready(function () {
            $("i[data-toggle='listen']")
                .css({ "cursor": "pointer" })
                .click(function (e) {
                    var target = $(e.target);
                    var userAlbumId = target.attr("data-id");
                    var listenSet = target.hasClass("glyphicon-ok-sign");

                    $.ajax({
                        method: listenSet ? "DELETE" : "PUT",
                        url: "/api/userAlbum/" + userAlbumId + "/listen",
                        data: null
                    })
                        .done(function (r) {
                            target.removeClass();
                            target.addClass("glyphicon " + (listenSet ? "glyphicon-play-circle" : "glyphicon-ok-sign"));
                        })
                        .fail(function (r) {
                            alert("Failed to change listen status");
                        });
                });
        });
    </script>
}
