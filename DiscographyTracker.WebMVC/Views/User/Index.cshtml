@model IEnumerable<DiscographyTracker.Models.UserArtistListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Your Crate</h2>

<p>
    @Html.ActionLink("Add an Artist to your Crate", "Index", "Artist")
</p>
@foreach (var item in Model)
{
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>@item.ArtistName</h2>
            </div>
            <div class="panel-body">
                <div class="progress">
                    <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                        <span class="sr-only">20% Complete</span>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                @Html.ActionLink("Albums", "Details", "Artist", new { id = item.ArtistID }, null) |
                @Html.ActionLink("Remove from Crate", "Delete", new { id = item.UserArtistID })
            </div>
        </div>
    </div>
}

